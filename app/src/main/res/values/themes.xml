<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ListTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ListItemLayoutStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>

    </style>
    <!-- Base application theme. -->
    <style name="Theme.OsnovaSredstvaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_beige</item>
        <item name="colorPrimaryVariant">@color/soft_pink</item>
        <item name="colorOnPrimary">@color/dark_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="textAppearanceListItem">@style/ListTextViewStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Stil za naslovni TextView (bold) -->
    <style name="TextViewTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Stil za regularne TextView-ove -->
    <style name="TextViewBodyStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Stil za ImageView -->
    <style name="ImageViewStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>

    </style>


    <!-- Stil za TextView elemente -->
    <style name="BaseTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

    <!-- Stil za EditText elemente -->
    <style name="BaseEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <!-- Stil za Button elemente -->
    <style name="BaseButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <!-- Stil za LinearLayout -->
    <style name="LinearLayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="Theme.OsnovaSredstvaApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


        <!-- Stil za panel (MaterialCardView) -->
        <style name="ExpandablePanelStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:elevation">4dp</item>
            <item name="android:layout_margin">16dp</item>
            <item name="android:visibility">visible</item>
        </style>

        <!-- Stil za zaglavlje (header) u panelu -->
        <style name="ExpansionHeaderStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:gravity">center_vertical</item>
        </style>

        <!-- Stil za naslov sekcije u zaglavlju panela -->
        <style name="SectionTitleStyle">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">16sp</item>
        </style>

        <!-- Stil za ikonicu proširenja/sažimanja panela -->
        <style name="ExpandCollapseIconStyle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:src">@drawable/ic_expand_more</item>
        </style>

        <!-- Stil za proširivi sadržaj unutar panela -->
        <style name="ExpansionContentStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
            <item name="android:visibility">gone</item>
            <item name="android:layout_marginTop">8dp</item>
        </style>

        <!-- Stil za SearchView elemente -->
        <style name="SearchViewStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:iconifiedByDefault">false</item>
        </style>



    <style name="Theme.OsnovaSredstvaApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OsnovaSredstvaApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>