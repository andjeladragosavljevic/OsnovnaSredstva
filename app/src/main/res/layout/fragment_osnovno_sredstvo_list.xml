<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.osnovnosredstvo.OsnovnoSredstvoFragment">

    <!-- MaterialCardView for expandable search -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_margin="16dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header with Expand/Collapse icon -->
            <LinearLayout
                android:id="@+id/expansionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Title of the section -->
                <TextView
                    android:id="@+id/sectionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search Options"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <!-- Icon to expand/collapse -->
                <ImageView
                    android:id="@+id/expandCollapseIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more" />
            </LinearLayout>

            <!-- Expandable content, hidden by default -->
            <LinearLayout
                android:id="@+id/expansionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <!-- SearchView for searching by name -->
                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:queryHint="Search by name"
                    android:iconifiedByDefault="false" />

                <!-- SearchView for searching by barkod -->
                <SearchView
                    android:id="@+id/searchBarkod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:queryHint="Search by barkod"
                    android:layout_marginTop="8dp"
                    android:iconifiedByDefault="false" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- RecyclerView for displaying items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchCard"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_osnovno_sredstvo" />

    <!-- TextView for empty view -->
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="Nema podataka za prikaz" />

</RelativeLayout>
