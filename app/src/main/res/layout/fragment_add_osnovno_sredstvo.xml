<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Naziv osnovnog sredstva -->
        <TextView
            style="@style/BaseTextViewStyle"
            android:text="Naziv" />

        <EditText
            android:id="@+id/naziv_osnovno_sredtsvo"
            style="@style/BaseEditTextStyle"
            android:hint="Unesite naziv" />

        <!-- Opis osnovnog sredstva -->
        <TextView
            style="@style/BaseTextViewStyle"
            android:text="Opis" />

        <EditText
            android:id="@+id/opis_osnovno_sredstvo"
            style="@style/BaseEditTextStyle"
            android:hint="Unesite opis" />

        <!-- Barkod -->
        <Button
            android:id="@+id/scanBarcodeButton"
            style="@style/BaseButtonStyle"
            android:drawableLeft="@drawable/ic_camera"
            android:text="Skeniraj barkod"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/BaseTextViewStyle"
            android:text="Barkod" />

        <EditText
            android:id="@+id/barkod_osnovno_sredstvo"
            style="@style/BaseEditTextStyle"
            android:hint="Unesite barkod ručno ili skenirajte"
            android:inputType="number" />

        <!-- Cijena -->
        <TextView
            style="@style/BaseTextViewStyle"
            android:text="Cijena" />

        <EditText
            android:id="@+id/cijena_osnovno_sredstvo"
            style="@style/BaseEditTextStyle"
            android:inputType="numberDecimal"
            android:hint="Unesite cijenu" />

        <!-- Datum kreiranja -->
        <TextView
            style="@style/BaseTextViewStyle"
            android:text="Datum kreiranja" />

        <DatePicker
            android:id="@+id/datum_kreiranja_osnovno_sredstvo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Zadužena osoba -->
        <TextView
            style="@style/BaseTextViewStyle"
            android:text="Zadužena osoba" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewOsoba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Izaberite osobu" />

        <!-- Zadužena lokacija -->
        <TextView
            style="@style/BaseTextViewStyle"
            android:text="Zadužena lokacija" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewLokacija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Izaberite lokaciju" />

        <!-- Horizontalni layout za dugmiće za sliku -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonUploadSlika"
                style="@style/BaseButtonStyle"
                android:drawableLeft="@drawable/ic_image"
                android:text="Dodaj sliku"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonTakePicture"
                style="@style/BaseButtonStyle"
                android:drawableLeft="@drawable/ic_camera"
                android:text="Snimi sliku"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Prikaz odabrane slike"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp" />

        <!-- Dugme za spremanje -->
        <Button
            android:id="@+id/save_osnovno_sredstvo"
            style="@style/BaseButtonStyle"
            android:layout_width="match_parent"
            android:text="Sačuvaj" />
    </LinearLayout>
</ScrollView>
