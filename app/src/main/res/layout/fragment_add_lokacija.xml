<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Grad -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grad" />

        <EditText
            android:id="@+id/grad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unos_grad"
            android:inputType="text"
            android:importantForAutofill="no"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adresa" />

        <EditText
            android:id="@+id/adresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unos_adrese"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/geografska_duzina" />

        <EditText
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unos_duzine"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            android:minHeight="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/geografska_sirina" />

        <EditText
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unos_sirine"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:minHeight="48dp"/>

        <Button
            android:id="@+id/save_lokacija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sacuvaj" />
    </LinearLayout>
</ScrollView>
